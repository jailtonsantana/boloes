<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".BolaoFormActivity">

    <Spinner
        android:id="@+id/spinner_loteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concurso"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/editNumeroConcurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Número do concurso"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/editValorBolao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Valor do bolao"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimativa de prêmio"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/editValorEstimativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Valor da estimativa"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar"/>
</LinearLayout>